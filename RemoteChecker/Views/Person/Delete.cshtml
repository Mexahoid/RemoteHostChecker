@model RemoteChecker.Models.Person

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление пользователя</h1>

<h3>Действительно хотите удалить пользователя @Html.DisplayFor(model => model.Login)?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Количество чекеров:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CheckRequests.Count)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <a asp-action="Details" asp-route-id="@Model.ID">Посмотреть информацию</a>
        <br />
        <a asp-action="Index">Назад к списку пользователей</a>
        <hr />
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
</div>
