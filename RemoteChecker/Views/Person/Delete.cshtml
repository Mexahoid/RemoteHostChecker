@model RemoteChecker.Models.Person

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление пользователя</h1>

<h3>Действительно хотите грохнуть этого пользователя?</h3>
<div>
    <h4>Логин: @Html.DisplayFor(model => model.Login)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <a asp-action="Details" asp-route-id="@Model.ID">Посмотреть информацию</a>
        <br />
        <a asp-action="Index">Назад к списку пользователей</a>
        <hr />
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
</div>
