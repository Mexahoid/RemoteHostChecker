@model RemoteChecker.Models.CheckRequest

@{
    ViewData["Title"] = "Удаление чекера";
}

<h1>Удаление чекера</h1>

<h3>Вы действительно хотите удалить этот чекер?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Адрес хоста
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HostAddress)
        </dd>
        <dt class="col-sm-2">
            CRON-выражение
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cron)
        </dd>
        <dt class="col-sm-2">
            Активен
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
        <dt class="col-sm-2">
            Владелец
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.Login)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Удалить чекер" class="btn btn-danger" /> 
        <br/>
        <a asp-action="Index">Назад к списку чекеров</a>
    </form>
</div>
